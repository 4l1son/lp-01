      fx:controller="sample.PessoaFormController">
    <children>
        <Label text="Nome:"/>
        <TextField fx:id="nomeField"/>

        <Label text="Idade:"/>
        <TextField fx:id="idadeField"/>

        <Button text="Salvar" onAction="#salvarPessoa"/>
    </children>
</VBox>
